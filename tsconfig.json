{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "noEmit": true,
        "target": "esnext",
        "module": "esnext",
        "useDefineForClassFields": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "allowJs": true,
        "checkJs": true,
        "types": ["svelte", "vite/client", "vitest/globals"]
    },
    "include": [
        "src/**/*.d.ts",
        "src/**/*.ts",
        "src/**/*.js",
        "src/**/*.svelte"
    ]
}
